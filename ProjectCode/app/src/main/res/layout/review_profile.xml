<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg2"
    tools:context=".activities.RWMainActivity"
    tools:ignore="ExtraText,UnknownId">


    <TextView
        android:id="@+id/tvUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="35dp"

        android:layout_marginEnd="34dp"
        android:layout_marginBottom="640dp"
        android:text="USER PROFILE"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textSize="30sp"

        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/imgUP"
        android:layout_width="304dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="370dp"
        android:src="@drawable/download" />

    <TextView
        android:id="@+id/tvRatingReviewUP"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="265dp"
        android:text="Ui/UX Developer"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv47UP"
        android:layout_width="133dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="165dp"
        android:text="4.7"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="59sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFetchData"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="103dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="33dp"
        android:text="View My Review"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnInsertData"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="85dp"
        android:text="Post a Review"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv22"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="310dp"
        android:text="Pathum Chamod"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold" />




</RelativeLayout>