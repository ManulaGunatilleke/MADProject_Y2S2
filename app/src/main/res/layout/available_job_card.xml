<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <GridLayout
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="@dimen/cardElevation"
            app:cardCornerRadius="@dimen/cardMargin"
            android:layout_marginLeft="@dimen/cardMargin"
            android:layout_marginBottom="@dimen/cardElevation"

            >

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/cardPadding"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/business_cooperation_and_work"
                    android:layout_width="@dimen/img_width_height"
                    android:layout_height="@dimen/img_width_height"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="@dimen/cardElevation"
            app:cardCornerRadius="@dimen/empty"
            android:layout_marginRight="@dimen/cardMargin"
            android:layout_marginTop="@dimen/cardMargin"
            android:layout_marginBottom="@dimen/cardMargin"
            >

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/cardPadding"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"
                    android:text="Job Discription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.cardview.widget.CardView>
