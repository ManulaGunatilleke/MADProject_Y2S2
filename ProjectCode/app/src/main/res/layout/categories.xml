<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgimgo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg4"
    tools:context=".activities.JobMainActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_margin="32dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtdashbord"
                    android:text="Our Job Categories"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtdashbord"
                    android:layout_marginTop="35dp"
                    android:text="8items"
                    android:textColor="#52BAFF"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/login"
                    android:layout_width="62dp"
                    android:layout_height="62dp"/>

            </RelativeLayout>
            
            <GridLayout
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivHelth"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:src="@drawable/helthscience" />

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="Health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivEdu"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:src="@drawable/education_training" />

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="Education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivIT"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:src="@drawable/information_technology_icon_illustration_vector" />

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="IT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivArtTechnology"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:src="@drawable/art_technology_communication" />

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="ArtTechnology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivArchitecture"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:src="@drawable/architecture" />

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="Architecture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivBusiness"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"
                            android:src="@drawable/business_finance_logo" />

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="Business"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/education_training"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"/>

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="Cateory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardCornerRadius="@dimen/cardMargin"
                    android:layout_margin="@dimen/cardMargin"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/cardPadding"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/education_training"
                            android:layout_width="@dimen/img_width_height"
                            android:layout_height="@dimen/img_width_height"/>

                        <TextView
                            android:layout_marginTop="@dimen/cardMargin"
                            android:textColor="#6f6f6f"
                            android:textSize="@dimen/textSize"
                            android:text="Cateory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

</ScrollView>